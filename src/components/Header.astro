<script is:inline>
  function toggleMenu() {
    const menu = document.getElementById("mobile-menu");
    menu.classList.toggle("hidden");
  }

  // Cierra el menú al hacer clic en cualquier enlace del menú móvil
  document.addEventListener("DOMContentLoaded", () => {
    const links = document.querySelectorAll("#mobile-menu a");
    links.forEach((link) => {
      link.addEventListener("click", () => {
        document.getElementById("mobile-menu").classList.add("hidden");
      });
    });
  });
</script>

<header
  class="bg-[var(--color-primary)]/90 backdrop-blur-sm text-white fixed top-0 w-full z-50 shadow-md"
>
  <div
    class="max-w-6xl mx-auto flex justify-between items-center py-4 px-4 md:px-6"
  >
    <!-- Logo -->
    <a href="#Hero" class="font-bold tracking-wide"
      ><img
        class="w-25 filter invert brightness-200 border-none"
        src="public/logo.svg"
        alt=""
      /></a
    >

    <!-- Botón hamburguesa -->
    <button
      class="md:hidden focus:outline-none"
      onclick="toggleMenu()"
      aria-label="Abrir menú"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Menú escritorio -->
    <nav class="hidden md:flex gap-6 text-sm font-medium">
      <a
        href="#Info"
        class="hover:text-[var(--color-theme-lightbrown)] transition-colors"
        >Información</a
      >
      <a
        href="#Entradas"
        class="hover:text-[var(--color-theme-lightbrown)] transition-colors"
        >Entradas</a
      >
      <a
        href="#Mapa"
        class="hover:text-[var(--color-theme-lightbrown)] transition-colors"
        >Ubicación</a
      >
      <a
        href="#FAQ"
        class="hover:text-[var(--color-theme-lightbrown)] transition-colors"
        >Preguntas frecuentes</a
      >
    </nav>
  </div>

  <!-- Menú móvil -->
  <div id="mobile-menu" class="md:hidden hidden px-4 pb-4">
    <nav class="flex flex-col gap-2 text-sm font-medium">
      <a
        href="#Info"
        class="hover:text-[var(--color-theme-lightbrown)] transition-colors"
        >Información</a
      >
      <a
        href="#Entradas"
        class="hover:text-[var(--color-theme-lightbrown)] transition-colors"
        >Entradas</a
      >
      <a
